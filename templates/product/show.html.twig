    <div class="row">
        <div class="col-md-5">
            <img src="/uploads/{{product.illustration}}" alt="{{product.name}}" class="img-fluid mt-2" style="width: 300px"/>
        </div>
        <div class="col-md-7 my-auto">
            <h3>{{ product.name }} </h3>
            <span class="product-page-price">{{( product.prix / 100 )}} â‚¬</span>
            <br>
            <span class="product-subtitle">{{ product.subtitle }}</span>
