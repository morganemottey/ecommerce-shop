{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - MM{% endblock %}

{% block product %}
 <div class="container-product">
        <div class="card-product">
            <div class="shoeBackground">
                <h1 class="nike">nike</h1>
                <img src="assets/shoes/logo.png" alt="" class="logo">
                <a href="#" class="share"><i class="fas fa-share-alt"></i></a>
                <img src="/uploads/{{product.illustration}}" alt="{{product.name}}" class="nike-img"/>
            </div>
            <div class="info">
                <div class="shoeName">
                    <div>
                        <h1 class="big">{{ product.name }}</h1>
                        <span class="new">new</span>
                    </div>
                    <h3 class="small">Men's running shoes</h3>
                </div>
                <div class="description">
                    <h3 class="title">Product Info</h3>
                    <p class="text">{{ product.subtitle }}</p>
                    <hr>
                    <p class="text"> {{ product.description }}</p>
                </div>
                <div class="color-container">
                    <h3 class="title">Color</h3>
                    <div class="colors">
                        <span class="color active" primary="#2175f5" color="blue"></span>
                        <span class="color" primary="#f84848" color="red"></span>
                        <span class="color" primary="#29b864" color="green"></span>
                        <span class="color" primary="#ff5521" color="orange"></span>
                        <span class="color" primary="#444" color="black"></span>
                    </div>
                </div>
                <div class="size-container">
                    <h3 class="title">size</h3>
                    <div class="sizes">
                        <span class="size">7</span>
                        <span class="size">8</span>
                        <span class="size active">9</span>
                        <span class="size">10</span>
                        <span class="size">11</span>
                    </div>
                </div>
                <div class="buy-price">
                    <a href="{{ path('add_to_cart', { 'id': product.id }) }}" class="buy"><i class="fas fa-shopping-cart"></i>Ajouter</a>
                    <div class="price">
                        <h1>{{( product.prix / 100 )}} €</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block content %}
<h3 class="best-sell__title">Nos meilleurs ventes</h3>
    <p class="best-sell__p">Découvrez les articles les plus vendus </p>
        <div class="row">
        {% for product in products %}
            <div class="col-md-3">
                {% include 'product/single_product.html.twig' %}
            </div>
        {% endfor %}
        </div>
{% endblock %}
