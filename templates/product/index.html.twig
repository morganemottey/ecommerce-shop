{% extends 'base.html.twig' %}

{% block title %}Les produits{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            <h3>Filtres</h3>
            {{ form(form) }}
        </div>
    <h1>Nos produits</h1>
    <div class="row">
        {% for product in products %}
            <div class="col-md-4">
                <div class="product-item text-center">
                    <a href={{ path('product', { 'slug': product.slug }) }}><img src="/uploads/{{product.illustration}}" alt="{{product.name}}" class="img-fluid"/></a>
                    <h5>{{ product.name }}</h5>
                    <span class="product-subtitle">{{ product.subtitle }}</span>
                    <span class="product-price">{{( product.prix / 100 )}} â‚¬</span>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
